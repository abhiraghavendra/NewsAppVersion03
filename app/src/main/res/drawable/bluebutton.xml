<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:right="10dp" android:top="5dp">
                <shape>
                    <gradient/>
                    <stroke
                        android:width="5dp"
                        android:color="#8b8be1" />
                    <corners
                        android:radius="6dp" />
                    <padding
                        android:left="20dp"
                        android:top="20dp"
                        android:right="20dp"
                        android:bottom="20dp" />

                    <corners android:radius="6dp" />
                    <solid android:color="#8b8be1" />
                </shape>
            </item>
        </layer-list>
        <shape>
            <solid
                android:color="#1841e4" />
            <stroke
                android:width="1dp"
                android:color="#1841e4" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#1841e4"
                android:endColor="#1841e4"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#1841e4" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>