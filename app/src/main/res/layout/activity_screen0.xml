<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhi.newapplication.MainActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bluebutton"
        android:text="News Items"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_above="@+id/button3"
        android:layout_alignStart="@+id/button1"
        android:layout_gravity="center"
        android:layout_marginBottom="14dp"
        android:background="@drawable/bluebutton"
        android:text="Joke of the Day"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignStart="@+id/button2"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp"
        android:background="@drawable/bluebutton"
        android:text="Inspiration"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_above="@+id/button7"
        android:layout_alignStart="@+id/button3"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bluebutton"
        android:text="Sleep Log"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="How would you like your morning briefing"
        android:textColor="#1323d4"
        android:textSize="15sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/morning"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp"
        android:background="@drawable/orangebutton"
        android:text="Prepare Morning Briefing"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bluebutton"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:text="After Alaram" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bluebutton"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:text="Activate on top wave" />

</RelativeLayout>
