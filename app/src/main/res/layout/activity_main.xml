<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhi.newapplication.MainActivity">


    <Button
        android:id="@+id/button1"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/modified"
        android:text="Top Stories" />

    <Button
        android:id="@+id/button2"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_alignStart="@+id/button1"
        android:layout_below="@+id/button1"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        android:background="@drawable/modified"
        android:text="Business" />

    <Button
        android:id="@+id/button3"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_alignStart="@+id/button1"
        android:layout_below="@+id/button2"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        android:background="@drawable/modified"
        android:text="Technology" />

    <Button
        android:id="@+id/button4"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_alignStart="@+id/button1"
        android:layout_below="@+id/button3"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        android:background="@drawable/modified"
        android:text="Entertainment" />

    <Button
        android:id="@+id/button5"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_alignStart="@+id/button1"
        android:layout_below="@+id/button4"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        android:background="@drawable/modified"
        android:text="Sports" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button5"
        android:layout_marginStart="11dp"
        android:layout_marginTop="40dp"
        android:text="No Overlap" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/radioButton"
        android:layout_alignBottom="@+id/radioButton"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/radioButton"
        android:text="Key Word" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/radioButton2"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/radioButton2"
        android:text="Smart" />


</RelativeLayout>
