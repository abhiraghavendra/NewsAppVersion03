<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/audiofinal1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.abhi.newapplication.Audio_activity">


    <Button
        android:id="@+id/button1"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="35dp"
        android:background="@drawable/modified"
        android:text="Back to Main Catagories" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Convert to Audio"
        android:textColor="#1323d4"
        android:textSize="20sp"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/button8"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Top Stories"
        android:background="@drawable/modified"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/button9"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_alignStart="@+id/button8"
        android:layout_below="@+id/button8"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/modified"
        android:text="Business"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_alignStart="@+id/button9"
        android:layout_below="@+id/button9"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/modified"
        android:text="Technology"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/button10"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="Select Voice Type"
        android:textColor="#1323d4"
        android:textSize="20sp"
        android:textStyle="italic"
        tools:ignore="UnknownId" />

    <CheckBox
        android:id="@+id/checkBox7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:layout_marginBottom="29dp"
        android:layout_marginStart="47dp"
        android:text="Male" />

    <CheckBox
        android:id="@+id/checkBox8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkBox7"
        android:layout_alignBottom="@+id/checkBox7"
        android:layout_alignEnd="@+id/button1"
        android:layout_marginEnd="44dp"
        android:text="Female" />


</RelativeLayout>
